<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bottom Line -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/moa_gradient_start"
                android:endColor="@color/moa_gradient_end"
                android:angle="0" />
        </shape>
    </item>

    <!-- Color of your action bar -->
    <item android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/moa_white" />
        </shape>
    </item>
</layer-list>