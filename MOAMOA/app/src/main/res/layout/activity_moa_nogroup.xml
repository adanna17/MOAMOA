<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.init.MoaNoGroupActivity"
    android:background="@color/moa_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingLeft="33dp"
        android:paddingRight="33dp"
        android:paddingTop="80dp"
        android:paddingBottom="24dp">

        <ImageView
            android:layout_width="173dp"
            android:layout_height="29dp"
            android:src="@drawable/moa_text"/>

        <kr.co.mashup.moamoa.common.KakaoProfileInformation
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:id="@+id/com_kakao_profileinformation"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/moa_nogroup"
            android:textSize="15sp"
            android:textColor="@color/moa_text_main"
            android:layout_marginTop="82dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:id="@+id/btn_init_newgroup"
            android:background="@drawable/btn_moa_newgroup"
            android:layout_marginTop="64dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:id="@+id/btn_init_pass"
            android:background="@drawable/btn_moa_pass"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
