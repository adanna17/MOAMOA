<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/moa_list_first_margin"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="kr.co.mashup.moamoa.ui.story.StoryDetailActivity"
    tools:showIn="@layout/activity_story_detail">

    <TextView
        android:id="@+id/textView_content_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="The 'moon' nobody noticed for a century"
        android:textColor="@color/moa_text_main"/>


    <!--리사이클러뷰로 변경-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="프로젝트3팀"
            android:textColor="@color/moa_text_hint"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#News"
            android:textColor="@color/moa_text_hint"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textView_content_highlight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="16dp"
        android:background="#d9c7a4"
        android:text="What aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@color/moa_background_gray"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="나의 의견"
            android:textColor="@color/moa_text_main"/>

        <TextView
            android:id="@+id/textView_story_opinion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="영어는 너무 어렵다."
            android:textColor="@color/moa_text_description"/>

        <TextView
            android:id="@+id/textView_story_opinion_update_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="수정/삭제"
            android:textColor="@color/moa_text_hint"/>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_story_opinion_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--이미지 버튼으로 변경-->
        <Button
            android:id="@+id/button_story_modify"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="수정하기"
            android:textColor="@color/moa_blue"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/button_story_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="삭제하기"
            android:textColor="@color/moa_blue"
            android:textSize="15sp"/>

    </LinearLayout>


</LinearLayout>
